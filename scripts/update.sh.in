#!/bin/bash

locales=(`ls LOCALE_DIR | grep "[a-z]\{2\}_[A-Z]\{2\}"`)

for locale in "${locales[@]}" ; do
    echo "Processing locale: $locale"
    f=LOCALE_DIR/$locale/LC_MESSAGES/DOMAIN
    if [ ! -d LOCALE_DIR/$locale/LC_MESSAGES ]; then
        mkdir -p LOCALE_DIR/$locale/LC_MESSAGES
    fi

    if [ -e $f.po ]; then
        msgmerge -v -U $f.po TEMPLATE
        msgfmt -v $f.po -o $f.mo
    else
        cp -v TEMPLATE $f.po
    fi
    echo ""
done
